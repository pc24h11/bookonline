	$linkSortNameDESC	= $this->linkListbook($id, $name, array('display' => $display, 'page' => 1, 'order' => 'name', 'dir' => 'DESC', 'limit' => $limit));
	$linkSortPriceASC	= $this->linkListbook($id, $name, array('display' => $display, 'page' => 1, 'order' => 'price', 'dir' => 'ASC', 'limit' => $limit));
	$linkSortPriceDESC	= $this->linkListbook($id, $name, array('display' => $display, 'page' => 1, 'order' => 'price', 'dir' => 'DESC', 'limit' => $limit));
	
	$linkLimitCurrent	= $this->linkListbook($id, $name, array('display' => $display, 'page' => 1, 'order' => $order, 'dir' => $dir, 'limit' => $limit));
	$linkLimit3			= $this->linkListbook($id, $name, array('display' => $display, 'page' => 1, 'order' => $order, 'dir' => $dir, 'limit' => 3));
