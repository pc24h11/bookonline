<?php 
	$this->headTitle($categoryInfo->name);
	$categoryInfo	= $this->categoryInfo;
	$id				= $categoryInfo->id;
	$name			= $categoryInfo->name;
	$filter			= $this->filter;
	$display		= $filter['display'];
	$page			= $filter['page'];
	$order			= $filter['order'];
	$dir			= $filter['dir'];
	$limit			= $filter['limit'];

	$linkDisplayGrid	= $this->linkListbook($id, $name, array('display' => 'grid', 'page' => $page, 'order' => $order, 'dir' => $dir, 'limit' => $limit));
	$linkDisplayList	= $this->linkListbook($id, $name, array('id' => $id, 'display' => 'list', 'page' => $page, 'order' => $order, 'dir' => $dir, 'limit' => $limit));
	
	$linkSortCurrent	= $this->linkListbook($id, $name, array('display' => $display, 'page' => 1, 'order' => $order, 'dir' => $dir, 'limit' => $limit));
